label-unfocused-padding = 1

label-yellow = %icon%
label-yellow-background = ${colors.nothing}
label-yellow-foreground = ${colors.yellow}
label-yellow-padding = 1

[module/date]
type = internal/date
interval = 1

date = "%Y-%m-%d"

time = %H:%M:%S

label =  %date%  %time%

[module/cmus]
type = custom/script

format-prefix = "  "
format-prefix-foreground = ${colors.green}

exec = bash ~/.config/polybar/polymus.sh
exec-if = pgrep -x cmus

interval = 1

click-left = cmus-remote --pause
click-right = cmuse-remote --stop

[module/volume]
