[colors]
; dark blue
background = #282C34
dim-background = #BF282C34
light-background = #33282C34
; silver
foreground = #ABB2BF
dim-foreground = #AAABB2BF
; yellow
yellow = #D19A66
; focus colors
blue = #61AFEF
blue2 = #528BFF
magenta = #C678DD
cyan = #56B6C2
green = #98C379
; red
piping-hot = #E06C75
; grey/gray
dimmed = #444444
dimmed-1 = #525E6D
dimmed-2 = #567B9A
; transparent
nothing = #0000

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 30

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.foreground}
line-size = 2

spacing = 1
padding-right = 1
padding-left = 0
module-margin = 1

font-0 = DejaVu Sans Mono Nerd Font:antialias=true:pixelsize=12;+2
font-1 = unifont:fontformat=truetype:size=10:antialias=false;+2

modules-left = volume
modules-center = i3
modules-right = date

fixed-center = true

wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/bottom]
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 30

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 2

spacing = 1
module-margin-left = 0
module-margin-right = 2

font-0 = DejaVu Sans Mono Nerd Font:antialias=true:pixelsize=12;+2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;+2

modules-left = cmus
modules-right = battery eth wlan temperature xkeyboard
tray-position = right

fixed-center =  true

[module/battery]
type = internal/battery
battery = BAT0
full-at = 98

format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-full =  <label-full>

label-charging = %percentage%%
label-charging-foreground = ${colors.yellow}

label-discharging = %percentage%%
label-discharging-foreground = ${colors.blue}

label-full = %percentage%%
label-full-foreground = ${colors.green}

format-charging-foreground = ${colors.yellow}
format-discharging-foreground = ${colors.blue}
format-full-foreground = ${colors.green}

[module/i3]
type = internal/i3

ws-icon-0 = 1; ffox
ws-icon-1 = 2; emacs
ws-icon-2 = 3; work
ws-icon-3 = 4; sh
ws-icon-4 = 5; msg
