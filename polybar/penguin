[colors]
; black
background = #0E0F10
dim-background = #BF0E0F10
light-background = #330E0F10
; silver
foreground = #7BB0DC
dim-foreground = #AA7BB0DC
; orange
urgent = #d39276
; blue
focus = #1164AF
focus-2 = #075AA7
focus-3 = #074D8E
focus-4 = #486992
; red
piping-hot = #FF5555
; grey/gray
dimmed = #444444
dimmed-1 = #525E6D
dimmed-2 = #567B9A
; transparent
nothing = #0000

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 30

background = ${colors.dim-background}
foreground = ${colors.foreground}

line-color = ${colors.foreground}
line-size = 2

spacing = 1
padding-right = 1
padding-left = 0
module-margin = 1

font-0 = DejaVu Sans Mono Nerd Font:antialias=true:pixelsize=12;+2
font-1 = unifont:fontformat=truetype:size=10:antialias=false;+2

modules-left = volume
modules-center = i3
modules-right = date

fixed-center = true

wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/bottom]
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 30

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 2

spacing = 1
module-margin-left = 0
module-margin-right = 2

font-0 = DejaVu Sans Mono Nerd Font:antialias=true:pixelsize=12;+2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;+2

modules-left = cmus
modules-right = battery eth wlan temperature xkeyboard
tray-position = right

fixed-center =  true

[module/battery]
type = internal/battery
battery = BAT0
full-at = 98

format-charging = battery: chrg <label-charging>
format-discharging = battery: dchrg <label-discharging>
format-full = battery: <label-full>

label-charging = %percentage%%
label-charging-foreground = ${colors.foreground}

label-discharging = %percentage%%
label-discharging-foreground = ${colors.foreground}

label-full = fully charged

[module/i3]
type = internal/i3
; 
ws-icon-0 = 1;1:firefox
ws-icon-1 = 2;2:emacs
ws-icon-2 = 3;3:work
ws-icon-3 = 4;4:shell
ws-icon-4 = 5;5:slack
ws-icon-5 = 6;6:keepass
ws-icon-6 = 7;7:random
ws-icon-7 = 8;8:random
ws-icon-8 = 9;9:random
ws-icon-9 = 10;10:music

pin-workspaces = false

format = <label-state> <label-mode>

index-sort = true
wrapping-scroll = false

label-mode = %mode%

label-focused = %icon%
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-foreground = ${colors.focus-4}
label-unfocused-padding = 1

label-urgent = %icon%
label-urgent-background = ${colors.nothing}
label-urgent-foreground = ${colors.urgent}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1

date = "%Y-%m-%d"
date-alt = "%Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M

label = date: %date% :: time: %time%

[module/cmus]
type = custom/script

format-prefix = " cmus: "
format-prefix-foreground = ${colors.focus-3}

exec = bash ~/.config/polybar/polymus.sh
exec-if = pgrep -x cmus

interval = 1

click-left = cmus-remote --pause
click-right = cmuse-remote --stop

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>

label-volume = " volume:"
label-volume-foreground = ${root.foreground}

format-muted = <label-muted> <bar-volume>
format-muted-foreground = ${colors.dim-foreground}

label-muted = "  mute: "
label-muted-foreground = ${colors.dim-foreground}

bar-volume-width = 40
bar-volume-foreground-0 = ${colors.foreground}
bar-volume-foreground-1 = ${colors.foreground}
bar-volume-foreground-2 = ${colors.focus}
bar-volume-foreground-3 = ${colors.focus}
bar-volume-foreground-4 = ${colors.focus}
bar-volume-foreground-5 = ${colors.focus-4}
bar-volume-foreground-6 = ${colors.focus-4}
bar-volume-gradient = true
bar-volume-indicator = >
bar-volume-indicator-font = 6
bar-volume-indicator-foreground = ${colors.urgent}
bar-volume-fill = >
bar-volume-fill-font = 6
bar-volume-empty = >
bar-volume-empty-font = 6
bar-volume-empty-foreground = ${colors.dimmed-2}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard

format = kbd: <label-layout> <label-indicator>
format-spacing = 0

label-layout-foreground = ${colors.foreground}

label-indicator = %name%
label-indicator-padding = 0
label-indicator-margin = 0
label-indicator-foreground = ${colors.focus}

[module/eth]
type = internal/network
interface = enp5s0f1
interval = 5

format-connected-prefix = "lan: up"
format-connected-prefix-foreground = ${colors.focus-4}

label-connected = " "
label-connected-foreground = ${colors.focus-4}

format-disconnected = <label-disconnected>
label-disconnected = "lan: down"
label-disconnected-foreground = ${colors.piping-hot}

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 5

format-connected = <label-connected>
format-connected-prefix = "wifi: "
format-connected-prefix-foreground = ${colors.foreground}

label-connected = "%signal%%"
label-connected-foreground = ${colors.foreground}

format-disconnected = <label-disconnected>

label-disconnected = "wifi: down"
label-disconnected-foreground = ${colors.piping-hot}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>

format-warn = <label-warn>

label = "temp: %temperature%"
label-foreground = ${colors.urgent}

label-warn = "temp: %temperature%"
label-warn-foreground = ${colors.piping-hot}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
