!---------------
! XTerm config |
!---------------
XTerm*selectToClipboard: true
XTerm.vt100.locale: true
XTerm.vt100.utf8: 1
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?
XTerm.vt100.translations: #override \
    Ctrl <Key>M: maximize() \n\
    Ctrl <Key>R: restore() \n\
    <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
    Ctrl Alt <Key>S: secure()
XTerm.vt100.saveLines: 4096
XTerm.vt100.bellIsUrgent: true
XTerm.vt100.faceName: ProggyCleanTTSZ:size=12:antialias=false
XTerm.vt100.font: 7x13
XTerm.vt100.faceSize: 8
XTerm.scaleHeight: 1.02
XTerm*on3Clicks: regex [^ \n]+
XTerm*on4Clicks: regex .*
XTerm*on5Clicks: line

!--------------
! Rofi config |
!--------------
! bg - Background color row
! fg - Text color
! bgalt - Background color alternating row
! hlbg - Background color selected row
! hlfg - Foreground color selected row

rofi.color-enabled: true

! State:                    'bg',     'fg',        'bgalt',         'hlbg',   'hlfg'
!rofi.color-normal: argb: XXYYYYYY,  #YYYYYY,  argb:XXYYYYYY,  argb: XXYYYYYY,  #YYYYYY
!rofi.color-urgent: argb: XXYYYYYY,  #YYYYYY,  argb:XXYYYYYY,  argb: XXYYYYYY,  #YYYYYY
!rofi.color-active: argb: XXYYYYYY,  #YYYYYY,  argb:XXYYYYYY,  argb: XXYYYYYY,  #YYYYYY

! State:            'background',      'border',    'separator'
!rofi.color-window: argb:XXYYYYYY, argb:XXYYYYYY,  argb:XXYYYYYY

! Dark theme.
rofi.theme: ~/.cache/wal/colors-rofi-dark.rasi

rofi.width: 55
rofi.lines: 8
rofi.columns: 2
rofi.font: ProggyCleanTTSZ 12
rofi.bw: 1
rofi.padding: 35
rofi.eh: 1
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.show-icons: true
rofi.sort: true
rofi.sidebar-mode: true
rofi.fake-background: screenshots
rofi.cycle: true
rofi.fullscreen: false