!--------------+
! XTerm config |
!--------------+
XTerm.termName: xterm-256color
XTerm*selectToClipboard: true
XTerm.vt100.locale: true
XTerm.vt100.utf8: true
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?
XTerm.vt100.translations: #override \
    Ctrl <Key>M: maximize() \n\
    Ctrl <Key>R: restore() \n\
    <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl Alt <Key>S: secure() \n\
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font()
XTerm.vt100.saveLines: 4096
XTerm.vt100.bellIsUrgent: true
XTerm.vt100.faceName: DejaVu Sans Mono Nerd Font:size=12:antialias=true:style=Regular
XTerm.vt100.faceNameDoublesize: PowerlineSymbols:pixelsize=12
XTerm.vt100.font: 7x13
XTerm.vt100.renderFont: true
XTerm.vt100.faceSize: 12
XTerm.scaleHeight: 1.01
XTerm*on3Clicks: regex [^ \n]+
XTerm*on4Clicks: regex .*
XTerm*on5Clicks: line
! One Dark Theme
XTerm.vt100.foreground: #ABB2BF
XTerm.vt100.background: #282C34
XTerm.vt100.cursorColor: #528BFF
! Black
XTerm.vt100.color0: #282C34
XTerm.vt100.color8: #5c6370
! Red
XTerm.vt100.color1: #E06C75
XTerm.vt100.color9: #BE5046
! Green
XTerm.vt100.color2: #98C379
XTerm.vt100.color10: #98C379
! Yellow
XTerm.vt100.color3: #D19A66
XTerm.vt100.color11: #E5C07B
! Blue
XTerm.vt100.color4: #61AFEF
XTerm.vt100.color12: #61AFEF
! Magenta
XTerm.vt100.color5: #C678DD
XTerm.vt100.color13: #C678DD
! Cyan
XTerm.vt100.color6: #56B6C2
XTerm.vt100.color14: #56B6C2
! White
XTerm.vt100.color7: #ABB2BF
XTerm.vt100.color15: #ABB2BF

!-------------+
! Rofi config |
!-------------+
! bg - Background color row
! fg - Text color
! bgalt - Background color alternating row
! hlbg - Background color selected row
! hlfg - Foreground color selected row

rofi.color-enabled: true

! State:                    'bg',     'fg',        'bgalt',         'hlbg',   'hlfg'
rofi.color-normal: argb:FF282C34,  #ABB2BF,  argb:FF282C34,  argb:77ABB2BF,  #98C379
rofi.color-urgent: argb:FF282C34,  #BE5046,  argb:FF282C34,  argb:77ABB2BF,  #BE5046
rofi.color-active: argb:FF282C34,  #D19A66,  argb:FF282C34,  argb:77ABB2BF,  #61AFEF

! State:            'background',      'border',    'separator'
rofi.color-window: argb:FF282C34, argb:FF61AFEF,  argb:FFE06C75

rofi.width: 55
rofi.lines: 8
rofi.columns: 2
rofi.font: DejaVu Sans Mono Nerd Font 12
rofi.bw: 1
rofi.padding: 35
rofi.eh: 1
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.show-icons: true
rofi.sort: true
rofi.sidebar-mode: true
rofi.fake-background: screenshots
rofi.cycle: true
rofi.fullscreen: false
