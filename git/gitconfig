[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	ui = true
	pager = true

[color "status"]
	added = cyan bold
	changed = red bold
	untracked = green bold

[color "branch"]
	current = blue bold
	local = magenta bold
	remote = green bold

[color "log"]
	author = cyan

[user]
	email = mdinestorov@gmail.com
	name = Martin Nestorov

[alias]
	lg = log --all --stat --pretty=oneline --graph --format='%h %d %an %cr %s'
	up = pull --rebase
	br = branch --verbose -a
	sfp = push --force-with-lease
	st = status
	civ = commit --verbose
	co = checkout
	ad = add .
	cim = commit -m
	pom = push origin master
	qfix = commit -p --amend --no-edit
	stash-rename = "!_() { rev=$(git rev-parse $1) && git stash drop $1 || exit 1 ; git stash store -m \"$2\" $rev; }; _"
	gsl = stash list
	cod = checkout .
	cam = commit -a -m
	fp = fetch -p --progress
[github]
	user = Anarcroth

[help]
	autocorrect = 20

[core]
	editor = vim
